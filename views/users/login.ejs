<%- include("../partials/header.ejs"); -%>

<main class="container mt-5 mb-5">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body shadow-sm">
        <p><i class="fas fa-sign-in-alt"></i> User Login</p>
        <%- include('../partials/utils/messages.ejs') %>
        <!--* Form Login -->
        <form action="/users/login" method="POST" autocomplete="off">
          <div class="form-group">
            <!--* Email  -->
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <!--* Password  -->
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <!--* Login Button  -->
          <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-dark btn-block float-end">
              Login
            </button>
          </div>
        </form>
        <p>
          No Account? <a href="/users/register" class="text-dark">Register</a>
        </p>
      </div>
    </div>
  </div>
</main>

<%- include("../partials/footer.ejs"); -%>
