<%- include("../partials/header.ejs"); -%> <%-
include("../partials/navbar.ejs"); -%>
<!--Section: Contact v.2-->
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <i class="fas fa-3x fa-envelope-open-text"></i>
        </div>
    </div>
</section>

<div class="container card card-body">
    <section class="mb-4">
        <!--Section heading-->
        <%- include('../partials/messages.ejs') %>
        <h2 class="h1-responsive font-weight-bold text-center my-4">
            Contact us
        </h2>
        <!--Section description-->
        <h6 class="text-center w-responsive mx-auto mb-5">
            Do you have any questions? Please do not hesitate to message us
            directly.
            <br />Our team will come back to you within a matter of hours to
            help you.
        </h6>

        <div class="row">
            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                <form
                    id="message-form"
                    name="message-form"
                    action="create"
                    method="POST"
                    autocomplete="off"
                >
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input
                                    type="text"
                                    id="name"
                                    name="message[name]"
                                    class="form-control"
                                    placeholder="Name"
                                    required
                                />
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input
                                    type="email"
                                    id="email"
                                    name="message[email]"
                                    class="form-control"
                                    placeholder="Email Address"
                                    required
                                />
                            </div>
                            <br />
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <input
                                    type="text"
                                    id="title"
                                    name="message[title]"
                                    class="form-control"
                                    placeholder="Subject"
                                    required
                                />
                            </div>
                        </div>
                        <br />
                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row mt-1">
                        <!--Grid column-->
                        <div class="col-md-12">
                            <div class="md-form">
                                <textarea
                                    type="text"
                                    id="body"
                                    name="message[body]"
                                    rows="4"
                                    class="form-control md-textarea"
                                    placeholder="Your Message..."
                                    required
                                ></textarea>
                            </div>
                        </div>
                    </div>
                    <br />
                    <button
                        type="submit"
                        class="btn btn-dark float-right"
                        name="button"
                    >
                        Send Message
                    </button>
                    <!--Grid row-->
                </form>
            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li>
                        <i class="fas fa-phone mt-4"></i>
                        <h6><b>+ 01 234 567 89</b></h6>
                    </li>

                    <!-- <li>
                        <i class="fas fa-envelope mt-4"></i>
                        <h6><b>abc@email.com</b></h6>
                    </li> -->
                </ul>
            </div>
            <!--Grid column-->
        </div>
    </section>
</div>
<!--Section: Contact v.2-->
<%- include("../partials/footer.ejs"); -%>
