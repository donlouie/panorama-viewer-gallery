<%- include("../partials/header.ejs"); -%> <%-
include("../partials/navbar.ejs"); -%>

<!--Section: Contact v.2-->

<div class="my-3 p-3 bg-body rounded shadow-sm">
    <div id="Map"></div>
</div>

<div class="container card card-body">
    <section class="mb-4">
        <!--Section heading-->
        <%- include('../partials/messages.ejs') %>
        <h2 class="h1-responsive font-weight-bold text-center my-4">
            Contact us
        </h2>
        <!--Section description-->
        <h6 class="text-center w-responsive mx-auto mb-5">
            Do you have any questions? Please do not hesitate to message us
            directly.
            <br />Our team will come back to you within a matter of hours to
            help you.
        </h6>

        <div class="row">
            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                <form
                    id="message-form"
                    name="message-form"
                    action="create"
                    method="POST"
                    autocomplete="off"
                >
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input
                                    type="text"
                                    id="name"
                                    name="message[name]"
                                    class="form-control"
                                    placeholder="Name"
                                    required
                                />
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <input
                                    type="email"
                                    id="email"
                                    name="message[email]"
                                    class="form-control"
                                    placeholder="Email Address"
                                    required
                                />
                            </div>
                            <br />
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <input
                                    type="text"
                                    id="title"
                                    name="message[title]"
                                    class="form-control"
                                    placeholder="Subject"
                                    required
                                />
                            </div>
                        </div>
                        <br />
                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row mt-1">
                        <!--Grid column-->
                        <div class="col-md-12">
                            <div class="md-form">
                                <textarea
                                    type="text"
                                    id="body"
                                    name="message[body]"
                                    rows="4"
                                    class="form-control md-textarea"
                                    placeholder="Your Message..."
                                    required
                                ></textarea>
                            </div>
                        </div>
                    </div>
                    <br />
                    <button
                        type="submit"
                        class="btn btn-dark float-right"
                        name="button"
                    >
                        Send Message <i class="far fa-paper-plane"></i>
                    </button>
                    <!--Grid row-->
                </form>
            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li>
                        <i class="fas fa-phone mt-4"></i>
                        <h6><b>+ 01 234 567 89</b></h6>
                    </li>

                    <!-- <li>
                        <i class="fas fa-envelope mt-4"></i>
                        <h6><b>abc@email.com</b></h6>
                    </li> -->
                </ul>
            </div>
            <!--Grid column-->
        </div>
    </section>
</div>
<!--Section: Contact v.2-->

<!-- Leaftlet JS, Script -->
<script>
    const latitude = 16.669890;
    const longitude = 120.337650;

    const mymap = L.map('Map').setView([latitude, longitude], 18);
    L.marker([latitude, longitude])
        .addTo(mymap)
        .bindPopup('Establishment Location!')
        .openPopup();

    const attiribution =
        '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors';

    const tileUrl = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png';
    const tiles = L.tileLayer(tileUrl, { attiribution });
    tiles.addTo(mymap);
</script>
<!-- /Leaflet JS, Script -->

