<%- include("../partials/header.ejs"); -%>

<main class="container mt-5 mb-5">
    <!--* Header  -->
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Gallery</h1>
                <h6>(SanJuan Campus)</h6>
                <p class="lead text-muted">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Maxime mollitia, molestiae quas vel sint.
                </p>
                <p>
                    <a href="#" class="btn btn-light my-2"
                        ><i class="fab fa-facebook-square"></i
                    ></a>
                    <a href="#" class="btn btn-light my-2"
                        ><i class="fab fa-instagram-square"></i
                    ></a>
                    <a href="#" class="btn btn-light my-2"
                        ><i class="fab fa-youtube-square"></i
                    ></a>
                </p>
            </div>
        </div>
    </section>

    <!--* Gallery List  -->
    <div class="album">
        <!--* Search Form-->
        <div class="search-input d-flex justify-content-center">
            <form
                action="/panoramas/:r"
                method="GET"
                class="form-inline"
                autocomplete="off"
            >
                <div class="input-group">
                    <input type="text" name="search" class="form-control" />
                    <span class="input-group-btn">
                        <input
                            type="submit"
                            value="Search"
                            class="btn btn-search btn-dark"
                        />
                    </span>
                </div>
            </form>
        </div>
        <!--* Search Form-->

        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-2">
                <!--  -->
                <% for(let panorama of panoramas) { %>
                <div class="col">
                    <div class="card shadow-sm">
                        <!-- <% panorama.images.forEach((img, i) => { %>
                        <img
                            src="<%= img.thumbnail %>"
                            class="card-img-top"
                            alt="..."
                        />
                        <% }) %> -->
                        <title>Placeholder</title>
                        <!-- <rect width="100%" height="100%" fill="#55595c" /> -->
                        <!-- <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text> -->
                        <!-- </svg> -->

                        <div class="card-body">
                            <h5 class="card-title"><%= panorama.title %></h5>
                            <p class="text-muted"><%= panorama.location %></p>
                            <p class="card-text">
                                <%= panorama.description.substring(0, 150) +
                                "..." %>
                            </p>
                            <div
                                class="
                                    d-flex
                                    justify-content-between
                                    align-items-center
                                "
                            >
                                <div class="btn-group">
                                    <a
                                        href="/panoramas/show/<%= panorama.id %>"
                                        type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                    >
                                        View
                                    </a>
                                </div>
                                <small class="text-muted"
                                    ><%= panorama.date.toDateString() %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                <!--  -->
            </div>

            <!--* Pagination -->
            <div class="mt-3">
                <% if (pages > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                    <li class="disabled">
                        <a class="page-link text-secondary">First</a>
                    </li>
                    <% } else { %>
                    <li>
                        <a class="page-link text-secondary" href="/panoramas/1"
                            >First</a
                        >
                    </li>
                    <% } %> <% var i = (Number(current) > 5 ? Number(current) -
                    4 : 1) %> <% if (i !== 1) { %>
                    <li class="disabled">
                        <a class="page-link text-secondary">...</a>
                    </li>
                    <% } %> <% for (; i <= (Number(current) + 4) && i <= pages;
                    i++) { %> <% if (i == current) { %>
                    <li class="active">
                        <a class="page-link text-secondary"><%= i %></a>
                    </li>
                    <% } else { %>
                    <li>
                        <a
                            class="page-link text-secondary"
                            href="/panoramas/<%= i %>"
                            ><%= i %></a
                        >
                    </li>
                    <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled">
                        <a class="page-link text-secondary">...</a>
                    </li>
                    <% } %> <% } %> <% if (current == pages) { %>
                    <li class="disabled">
                        <a class="page-link text-secondary">Last</a>
                    </li>
                    <% } else { %>
                    <li>
                        <a
                            class="page-link text-secondary"
                            href="/panoramas/<%= pages %>"
                            >Last</a
                        >
                    </li>
                    <% } %>
                </ul>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include("../partials/footer.ejs"); -%>
