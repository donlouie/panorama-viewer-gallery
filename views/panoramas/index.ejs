<%- include("../partials/header.ejs"); -%>
<%- include("../partials/navbar.ejs"); -%> 
<%- include('../partials/messages.ejs') %>
<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <i class="fas fa-3x fa-camera-retro"></i>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <!--  -->
        <% for(let panorama of panoramas) { %>
        <div class="col">
          <div class="card shadow-sm">
            <!-- <svg
              class="bd-placeholder-img card-img-top"
              width="100%"
              height="225"
              xmlns="http://www.w3.org/2000/svg"
              role="img"
              aria-label="Placeholder: Thumbnail"
              preserveAspectRatio="xMidYMid slice"
              focusable="false"
            > -->
              <img src="<%= panorama.images[0].url %>" class="card-img-top" alt="...">
              <title>Placeholder</title>
              <rect width="100%" height="100%" fill="#55595c" />
              <!-- <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text> -->
            </svg>

            <div class="card-body">
              <h5 class="card-title"><%= panorama.title %></h5>
              <p class="text-muted"><%= panorama.location %></p>
              <p class="card-text">
                <%= panorama.description.substring(0, 250) + "..."  %> 
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a
                    href="panoramas/<%= panorama.id %>"
                    type="button"
                    class="btn btn-sm btn-outline-secondary"
                  >
                    View
                  </a>
                </div>
                <small class="text-muted"><%= panorama.date.toDateString()  %> </small>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <!--  -->
      </div>
    </div>
  </div>
</main>
<%- include("../partials/footer.ejs"); -%>
